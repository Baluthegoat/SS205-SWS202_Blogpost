---
import TagsBar from '@/components/TagsBar.astro'
import { resolveTags, toDateString } from '@/helpers/util'
import type { CollectionEntry } from 'astro:content'
import PageLayout, { type Props as PageLayoutProps } from './PageLayout.astro'

export interface Props {
  post: CollectionEntry<'posts'>
}

const { post } = Astro.props

const {
  Content,
  remarkPluginFrontmatter: { readingTime }
} = await post.render()

const frontmatter: PageLayoutProps['frontmatter'] = {
  ...post.data,
  opengraphImage: new URL(
    post.data.opengraphImage || `/posts/${post.slug}.png`,
    Astro.site
  ).toString(),
  activeHeaderLink: 'Blog',
  scrollProgress: true
}

const publishedStr = toDateString(post.data.publishedDate)
---

<PageLayout {frontmatter}>
  <script src="@/helpers/headingAnchors.ts"></script>

  <h1 class="my-4">{frontmatter.title}</h1>
  <TagsBar tags={resolveTags(post.data.tags)} />

  <div class="mt-4 opacity-65">
    <span
      >Published on <time>{publishedStr}</time> by <a
        class="hover:opacity-100"
        href={`/authors/${post.data.author}`}>{post.data.author}</a
      > Î‡ {readingTime}
    </span>
  </div>
  <Content />
</PageLayout>
